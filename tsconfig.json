{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "lib": ["ES2022"],
      "module": "ES2022",
      "target": "ES2022",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "exactOptionalPropertyTypes": true,
      "outDir": "dist",
      "removeComments": true
    },
    "include": ["src/**/*"]
}  