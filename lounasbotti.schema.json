{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "lounasbotti.schema.json",
    "title": "Lounasbotti configuration",
    "description": "Configuration JSON for Lounasbotti",
    "type": "object",
    "required": ["instanceId", "dataProvider", "defaultRestaurants", "gitUrl", "displayVoters", "iconsEnabled", "adminUsers"],
    "properties": {
        "instanceId": {
            "type": "string"
        },
        "dataProvider": {
            "type": "string",
            "pattern": "^ruokapaikkaFi|mock$"
        },
        "defaultRestaurants": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string"
            }
        },
        "additionalRestaurants": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "restaurantDisplayNames": {
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "type": "string",
                    "minItems": 2,
                    "maxItems": 2
                }
            }
        },
        "customErrorMessages": {
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "type": "string",
                    "minItems": 2,
                    "maxItems": 2
                }
            }
        },
        "gitUrl": {
            "type": "string",
            "format": "uri"
        },
        "displayVoters": {
            "type": "boolean"
        },
        "iconsEnabled": {
            "type": "boolean"
        },
        "overrideIconsUrl": {
            "type": "string",
            "format": "uri"
        },
        "announcements": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "adminUsers": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "emojiRules": {
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "type": "string",
                    "minItems": 2,
                    "maxItems": 2
                }
            }
        },
        "stripRules": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "regex"
            }
        },
        "openMeteoURL": {
            "type": "string",
            "format": "uri"
        },
        "configSource": {
            "type": "string"
        },
        "debug": {
            "type": "object"
        }
    }
}